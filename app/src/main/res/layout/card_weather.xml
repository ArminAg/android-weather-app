<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#ECECEC"
    card_view:cardCornerRadius="0dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            card_view:srcCompat="@drawable/sunny_mini"
            android:id="@+id/cardWeatherIcon" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="2dp">

            <TextView
                android:text="Tomorrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardWeatherDay"
                android:textSize="20sp"
                android:textColor="#595959" />

            <TextView
                android:text="Clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardWeatherDescription"
                android:textSize="15sp"
                android:textColor="#595959" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingTop="2dp">

            <TextView
                android:text="35°"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardTempHigh"
                android:textSize="20sp"
                android:textColor="#595959" />

            <TextView
                android:text="28°"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardTempLow"
                android:textSize="15sp"
                android:textColor="#595959" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
